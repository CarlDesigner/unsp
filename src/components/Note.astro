---
export interface Props {
  type?: "info" | "warning" | "error" | "success";
}

const { type = "info" } = Astro.props;

const colors = {
  info: "bg-blue-500/10 text-blue-500 border border-blue-500",
  warning: "bg-yellow-500/10 text-yellow-500 border border-yellow-500",
  error: "bg-red-500/10 text-red-500 border border-red-500",
  success: "bg-green-500/10 text-green-500 border border-green-500",
  motivation: "border-purple-500 bg-purple-100 text-purple-900 dark:bg-purple-900 dark:text-purple-100"
};
---

<div class={`px-4 py-2 rounded-lg text-sm font-medium ${colors[type]}`}>
  <slot />
</div>
